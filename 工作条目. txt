Model
	-- User_model
		-- getUser()
			-- 参数:无
			-- 返回:一条用户数据记录
			-- 说明:根据用户提交表单信息返回一条数据记录

		-- checkValidRegister()
			-- 参数:无
			-- 返回:一条用户数据记录
			-- 说明:根据用户提交表单信息返回一条数据记录,用于校验用户是否有效

		-- registerUser()
			-- 参数:无
			-- 返回:一个新加如记录的 id
			-- 说明: 写入新用户注册信息,并返回 id值

		-- getUserById($id)
			-- 参数
				-- $id: 用户 id 值
			-- 返回:一条用户数据记录
			-- 说明:根据用户 id查询,返回一条数据记录

		-- updateUserStatus($id)
			-- 参数
				-- $id: 用户 id 值
			-- 返回: 影响记录的条数,一般为1
			-- 说明:根据用户 id更新用户的 status ,返回一条记录数

		-- getUserStatus($id)
			-- 参数
				-- $id: 用户 id 值
			-- 返回:一条用户数据记录
