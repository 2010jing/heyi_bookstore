					-- $message:邮件内容
					-- $type:类型
				-- 说明: 发送邮件
				-- view: 无

			-- logout()
				-- 参数: 无
				-- 说明: 注销用户
				-- view: 无

			-- activeUser($id_num,$token)
				-- 参数
					-- $id_num:用户 id
					-- $token: token验证
				-- 说明: 根据用户 id 和 token 验证激活
				-- view: 无

			-- updateUserStatus($id)
				-- 参数
					-- $id:用户	 id
				-- 说明: 根据用户 id 更新用户 status
				-- view: 无

			-- deleteUserNotActiveBySid($id)
				-- 参数
					-- $id:用户	 id
				-- 说明: 根据用户 id 删除未激活用户
				-- view: 无

			-- encode_text($tex,$key,$type="encode",$expiry=0)
				-- 参数
					-- $tex:加密/解密 字符串
					-- $key: 加密key值
					-- $type: encode / decode
					-- $expiry: 有效时长
				-- 说明: 给定字符串加密/解密
