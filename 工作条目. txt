1. 接口文档

Controller
	-- Auth
			-- index()
				-- 参数: 无
				-- 说明: 如果用户未登录,则进入到登录页面;否则返回首页
				-- view: login

			-- register()
				-- 参数: 无
				-- 说明: 如果用户未登录,则进入到注册;否则返回首页 
				-- view:  register

			-- signin()
				-- 参数: 无
				-- 说明: 根据用户提交登录表单数据,登录系统
				-- view: 无

			-- signup()
				-- 参数: 无
				-- 说明: 根据用户提交注册表单数据,注册用户信息

			-- sendEmail($email,$subject,$message,$type)
				-- 参数
					-- $email:收件人邮箱地址
